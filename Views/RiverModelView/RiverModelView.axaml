<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DevelopmentProject.ViewModels.RiverModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DevelopmentProject.Views.RiverModelView.RiverModelView"
             x:DataType="vm:RiverViewModel"
             x:CompileBindings="True">
    <Design.DataContext>
        <vm:RiverViewModel/>
    </Design.DataContext>
    <StackPanel
        Margin="10">
		<Slider Value="{Binding SelectedRiverSpeed, Mode=TwoWay}"/>
        <TextBlock Text="{Binding SelectedRiverSpeed, Mode=OneWay}"/>
		</StackPanel>
</UserControl>
